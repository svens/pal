#pragma once // -*- C++ -*-

/**
 * \file pal/string
 * Convenience string utilities
 */

#include <string>
#include <type_traits>

namespace pal {

namespace __string {

template <typename T>
constexpr bool is_value_type_char = std::is_same_v<typename T::value_type, char>;

} // namespace __string

/// std::string with custom Allocator for char types only
template <typename Allocator>
	requires(__string::is_value_type_char<Allocator>)
using string = std::basic_string<char, std::char_traits<char>, Allocator>;

} // namespace pal
